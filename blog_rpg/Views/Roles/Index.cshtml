@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Permissões";
}

<h1 class="bg-info text-white">@ViewData["Title"]</h1>
<a asp-action="Create" class="btn btn-secondary">Criar uma permissão</a>

<table class="table table-sm table-bordered table-bordered">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Usuários</th>
        <th>Atualizar</th>
        <th>Apagar</th>
        </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Atualizar</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Apagar
                    </button>
                </form>
            </td>
        </tr>
    }
</table>