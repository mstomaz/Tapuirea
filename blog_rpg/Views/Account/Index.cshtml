@model IEnumerable<blog_rpg.Areas.Identity.Models.ApplicationUser>
@using blog_rpg.Areas.Identity.Models
@using blog_rpg.Models

@{
    ViewData["Title"] = "Usuários";
}

<h1 class="bg-info text-white">@ViewData["Title"]</h1>
<a asp-action="Create" class="btn btn-secondary">Criar Novo Usuário</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Atualizar</th>
        <th>Delete</th>
    </tr>
    @foreach (ApplicationUser user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">
                    Atualizar
                </a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Apagar
                    </button>
                </form>
            </td>
        </tr>
    }
</table>