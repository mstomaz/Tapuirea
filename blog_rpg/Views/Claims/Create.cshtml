@{
    ViewData["Title"] = "Criar Reivindicação";
}

<h1 class="bg-info text-white">@ViewData["Title"]</h1>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label for="ClaimType">Tipo de Reivindicação:</label>
        <input name="ClaimType" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ClaimValue">Valor de Reivindicação:</label>
        <input name="ClaimValue" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
</form>